@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Изтриване на лични данни";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-center">@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Изтриването на тези данни ще премахне перманентно вашия акаунт и не може да бъде възстановено.</strong>
    </p>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form id="delete-user" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Моля, въведете вашата парола." />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }
            <button class="w-100 btn btn-lg btn-danger" type="submit">Изтриване на данни и затваряне на акаунта ми</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
