@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Забравена парола?";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<h2 class="text-center">Въведете вашия имейл.</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div class="text-danger" role="alert">@Html.ValidationSummary(false, "", new { @class = "text-danger" })</div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Имейл</label>
                <span class="text-danger" asp-validation-for="Input.Email"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Нулиране на паролата</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
