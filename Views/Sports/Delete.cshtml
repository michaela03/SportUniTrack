@model SportUniTrack.Models.Sport

@{
    ViewData["Title"] = "Изтриване";
}

<h1>Изтриване</h1>

<h3>Сигурен ли сте, че искате да изтриете това?</h3>
<div>
    <h4>Спорт</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Име
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Правила
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rules)
        </dd>
        <dt class="col-sm-2">
            URL на снимка
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" class="img-fluid" alt="Снимка на спорт" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтрий" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Обратно към списъка</a>
    </form>
</div>
